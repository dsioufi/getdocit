<% provide(:title, @job.role) %>
<h1><%= @job.role %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@job , :html => {:class => "form-horizontal"})  do |f| %>
    <%= render 'shared/error_messages', object: f.object%>

    <div class="form-group">
      <%= f.label :employer, :class =>"col-sm-2 control-label" %>
      <div class="col-sm-6">
        <p class="form-control-static"><%= @job.employer %> </p>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :location, :class =>"col-sm-2 control-label" %>
      <div class="col-sm-6">
        <p class="form-control-static"><%= @job.location %> </p>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :role, :class =>"col-sm-2 control-label" %>
      <div class="col-sm-6">
         <p class="form-control-static"><%= @job.role %> </p>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, :class =>"col-sm-2 control-label" %>
      <div class="col-sm-6">
         <p class="form-control-static"><%= @job.description %> </p>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :criteria, :class =>"col-sm-2 control-label" %>
      <div class="col-sm-6">
       <p class="form-control-static"><%= @job.criteria %> </p>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :category, :class =>"col-sm-2 control-label" %>
      <div class="col-sm-6">
      <p class="form-control-static"><%= @job.category %> </p>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :salary_amount, :class =>"col-sm-2 control-label" %>
    <div class="col-sm-6">
      <p class="form-control-static">$<%= @job.salary %> <%= @job.salary_type %> </p>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :closed_date, :class =>"col-sm-2 control-label" %>
    <div class='input-group col-sm-5' id='datetimepicker5'>
     <p class="form-control-static"><%= @job.closed_date %> </p>
    </div>
  </div>
  <h3>Contact person</h3>
  <div class="form-group">
    <%= f.label :name, :class =>"col-sm-2 control-label" %>
    <div class="col-sm-6">
     <p class="form-control-static"><%= @job.contact %> </p>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, :class =>"col-sm-2 control-label" %>
    <div class="col-sm-6">
     <p class="form-control-static"><%= @job.contact_email %> </p>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :phone, :class =>"col-sm-2 control-label" %>
    <div class="col-sm-6">
      <p class="form-control-static"><%= @job.contact_phone %> </p>
    </div>
  </div>

 <% end %>
</div>
</div>
