<tr>
	
	<% if job.category == "Casual" %>
	<td class="info">
		<%= job.category %>
	</td>
	<% elsif job.category == "Part-time" %>
	<td class="success">
		<%= job.category %>
	</td>
	<% else %>
	<td class="warning">
		<%= job.category %>
	</td>
	<% end %>

	
	<td class="role">
		<h4><%= link_to job.role, job_path(job.id) %></h4>
	</td>
	<td class="type">
		<%= job.employer %><br/><%= job.location %>
	</td>
	<td>
		Posted <em><%= time_ago_in_words(job.created_at) %></em> ago.
	</td>
	<td>
		<% if current_user?(job.user) %>
		<%= link_to "Edits", edit_job_path(job.id),:class=>"btn btn-default"%>
		<%= link_to "Delete", job, method: :delete,
		data: { confirm: "Are you sure you want to remove this job from the list?" },
		title: job.role, :class=>"btn btn-danger" %>
		<% end %>
	</td>
</tr>
